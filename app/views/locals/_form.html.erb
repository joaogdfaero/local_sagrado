<%= form_with(model: local, class: "max-w-md mx-auto mt-8") do |form| %>
  <% if local.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold"> <%= pluralize(local.errors.count, "error") %> prohibited this local from being saved:</strong>
      <ul class="mt-3 list-disc list-inside">
        <% local.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :nome, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :nome, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :endereco, "Endereço", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :endereco, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :religiao_denominacao, "Religião", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.select :religiao_denominacao, Local::RELIGIOES_DENOMINACOES, {}, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :descricao, "Descrição", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :descricao, placeholder: "Descreva brevemente o seu grupo.", class: "resize-y h-32 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :eventos, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_area :eventos, placeholder: "Cite eventos realizados pelo grupo.", class: "resize-y h-32 shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :contato, "Contato/Redes Sociais", class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.text_field :contato, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div>
    <%= form.submit "Registrar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
  </div>
<% end %>
